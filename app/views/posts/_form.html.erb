<div columns="section">
    <%= simple_form_for @post, html: { multipart: true } do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="field">
        <div class="control">
          <%= f.input :title , required: true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :source, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
        </div>
      </div>
      

      <div class="columns">
        <div class="field column is-4">
          <div class="control">
            <label class="label">Tag</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :tag, collection: Post::TAG, prompt: "Select tag", required: true %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-tag"></i>
                </span>
              </div>
          </div>
        </div>
      

        <div class="field column is-4">
          <div class="control">
            <label class="label">Colour</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :colour, collection: Post::COLOUR, prompt: "Select colour", required: true %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-paint-brush"></i>
                </span>
              </div>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label class="label">Add image</label>
            <div class="file">
              <label class="file-label">
                <%= f.input :image, as: :file, input_html: { class:"file-input post-image" }, label: false, wrapper: false, required: true %>
                  <span class="file-cta">
                    <span class="file-icon"><i class="fa fa-upload"></i></span>
                    <span class="file-label">Choose a fileâ€¦</span>
                  </span>
              </label>
            </div>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <%= f.button :submit, class: 'button is-warning is-inverted is-outlined' %>
          <%= link_to "Back", posts_path, class:"button" %>
        </div>
      </div>
    

    <% end %>
</div>  
